  <script>
    function generatePrescription() {
      const healthCardNumber = document.getElementById("healthCardNumber").value;
      const patientName = getRandomName();
      const contactDetails = generateDummyContactDetails();
      const bloodGroup = getDummyBloodGroup();
      const previousMedication = getDummyPreviousMedication();
      const vaccineStatus = getDummyVaccineStatus();
      const antibioticResistance = getDummyAntibioticResistance();
      const chronicDiseases = getDummyChronicDiseases();
      
      document.getElementById("patientName").value = patientName;
      document.getElementById("contactDetails").value = contactDetails;
      document.getElementById("prescriptionPatientName").textContent = patientName;
      document.getElementById("prescriptionContactDetails").textContent = contactDetails;
      document.getElementById("prescriptionBloodGroup").textContent = bloodGroup;
      document.getElementById("prescriptionPreviousMedication").textContent = previousMedication;
      document.getElementById("prescriptionVaccineStatus").textContent = vaccineStatus;
      document.getElementById("prescriptionAntibioticResistance").textContent = antibioticResistance;
      document.getElementById("prescriptionChronicDiseases").textContent = chronicDiseases;
      
      document.getElementById("prescription").style.display = "block";
    }
    
    function getRandomName() {
      const names = ["Mohammad Jamal Uddin", "Saleha Begum", "Rohima Akter", "Riaz Uddin Hannan"];
      return names[Math.floor(Math.random() * names.length)];
    }
    
    function generateDummyContactDetails() {
      const contact = "0172156420";
      return contact;
    }
    
    function getDummyBloodGroup() {
      const bloodGroups = ["A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-"];
      return bloodGroups[Math.floor(Math.random() * bloodGroups.length)];
    }
    
    function getDummyPreviousMedication() {
      const medications = ["Paracetamol ", "Amoxicillin", "Amlodipine", "Ranitidine"];
      return medications.join(", ");
    }
    
    function getDummyVaccineStatus() {
      const vaccineStatuses = ["Up to date", "Incomplete", "Not vaccinated"];
      return vaccineStatuses[Math.floor(Math.random() * vaccineStatuses.length)];
    }
    
    function getDummyAntibioticResistance() {
      const resistanceOptions = ["Sensitive", "Resistant", "Intermediate"];
      const antibiotics = ["Meropenem", "Vancomycin", "Levofloxacin"];
      const resistanceData = antibiotics.map(antibiotic => {
        const resistance = resistanceOptions[Math.floor(Math.random() * resistanceOptions.length)];
        return `${antibiotic}: ${resistance}`;
      });
      return resistanceData.join(", ");
    }
    
    function getDummyChronicDiseases() {
      const diseases = ["Diabetes", "Hypertension", "Asthma", "Arthritis"];
      return diseases.join(", ");
    }
    
    function showHistoryPopup() {
      document.getElementById("historyPopup").classList.toggle("active");
    }
    function generateRandomHealthCardNumber() {
    // Generate a random number between 1000000000 and 9999999999
    return Math.floor(Math.random() * 9000000000) + 1000000000;
  }
     function printPrescription() {
    const patientName = document.getElementById("prescriptionPatientName").textContent;
    const contactDetails = document.getElementById("prescriptionContactDetails").textContent;
    const bloodGroup = document.getElementById("prescriptionBloodGroup").textContent;
    const previousMedication = document.getElementById("prescriptionPreviousMedication").textContent;
    const vaccineStatus = document.getElementById("prescriptionVaccineStatus").textContent;
    const antibioticResistance = document.getElementById("prescriptionAntibioticResistance").textContent;
    const chronicDiseases = document.getElementById("prescriptionChronicDiseases").textContent;
    const diagnosis = document.getElementById("diagnosis").value;
    const generalMedication = document.getElementById("medication").value;
    const controlledMedicine = document.getElementById("controlledMedicine").value;
    const advice = document.getElementById("advice").value;
  const healthCardNumber = generateRandomHealthCardNumber();

    const printContent = `
     <div class="watermark">Patient Copy</div>
      <h2>Patient Prescription</h2>
      <p><strong>Health Card Number:</strong> ${healthCardNumber}</p>
      <p><strong>Patient Name:</strong> ${patientName}</p>
      <p><strong>Contact Details:</strong> ${contactDetails}</p>
      <p><strong>Blood Group:</strong> ${bloodGroup}</p>
      <p><strong>Previous Medication Names:</strong> ${previousMedication}</p>
      <p><strong>Vaccine Status:</strong> ${vaccineStatus}</p>
      <p><strong>Antibiotic Resistance:</strong> ${antibioticResistance}</p>
      <p><strong>Chronic Diseases:</strong> ${chronicDiseases}</p>
      <p><strong>Diagnosis:</strong> ${diagnosis}</p>
      <p><strong>General Medication:</strong> ${generalMedication}</p>
      <p><strong>Controlled Medicine:</strong> ${controlledMedicine}</p>
      <p><strong>Advice:</strong> ${advice}</p>
    `;

    const originalContent = document.body.innerHTML;
    document.body.innerHTML = printContent;
    window.print();
    document.body.innerHTML = originalContent;
  }
    
    function openRegistrationForm() {
      document.getElementById("registrationPopup").classList.add("active");
    }
    
    function closeRegistrationForm() {
      document.getElementById("registrationPopup").classList.remove("active");
    }
    
    function openVaccineAlertForm() {
      document.getElementById("vaccineAlertPopup").classList.add("active");
    }
    
    function closeVaccineAlertForm() {
      document.getElementById("vaccineAlertPopup").classList.remove("active");
    }
    
    function registerPatient() {
      const newPatientName = document.getElementById("newPatientName").value;
      const newPatientContact = document.getElementById("newPatientContact").value;
      
      // Perform registration logic here
      
      closeRegistrationForm();
      alert("Patient registered successfully!");
    }
    
   
     
    
    function savePrescription() {
      const prescriptionData = {
        patientName: document.getElementById("patientName").value,
        contactDetails: document.getElementById("contactDetails").value,
        bloodGroup: document.getElementById("prescriptionBloodGroup").textContent,
        previousMedication: document.getElementById("prescriptionPreviousMedication").textContent,
        vaccineStatus: document.getElementById("prescriptionVaccineStatus").textContent,
        antibioticResistance: document.getElementById("prescriptionAntibioticResistance").textContent,
        chronicDiseases: document.getElementById("prescriptionChronicDiseases").textContent,
        diagnosis: document.getElementById("diagnosis").value,
        medication: document.getElementById("medication").value,
        advice: document.getElementById("advice").value
      };
      
      // Perform save logic here
      
      alert("Prescription saved successfully!");
    }
  </script>
